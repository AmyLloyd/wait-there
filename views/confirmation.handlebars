<section class="row">
  <div style="background-attachment: fixed; background-size: cover; min-height: 100vh;">
    <h1 class="text-center">{{admin.username}} thanks you for your order.</h1>
    <p class = "lead text-center">Check status using the button. When your order status changes to 'In transit' please be at the delivery location.</p>

    {{#each admin.customerOrders}}
    <div class="card mb-3 text-center text-bg-danger" style="max-width: 36rem; display:block; margin:auto;">
        <div class="card-header text-body-secondary">
            Reference: {{reference_name}}
        </div>
        <div class="card-body">
            <div>
                <h5 class="card-title text-dark">Order {{this.id}} at location {{this.location}}</h5>
                <ul class="list-group list-group-flush">
                    {{#each this.items}}
                    <li class="list-group-item">{{orderItem.qty}} {{this.name}} ${{this.price}}</li>
                    {{/each}}
                    <li class="list-group-item">Total price: ${{this.total_amount}}</li>
                </ul>
            </div>
            <div  class="row card-body"></div>
            <div class="row">
                <div class="col-2"></div>
                <h3 class="col-8" style="color: black; font-weight: bold;">{{this.status}}</h3>
                <div class="col-2"></div>
            </div>
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <button class="btn btn-dark btn-sm text-bg-dark text-light m-3" type="button" id="checkStatusBtn">
                        <i class="bi bi-arrow-clockwise"></i>
                        Check status
                    </button>
                <div>
                <div class="col-2"></div>
            </div>
        </div>
        <div class="card-footer text-body-secondary">
            {{this.date_created}}
        </div>
    </div>
    {{/each}}
    </div>
</section>

<script src="/js/confirmation.js"></script>