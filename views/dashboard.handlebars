<section class="row">
    <h2>{{admin.username}} Dashboard </h2>
    <p class="lead">Here's your space to make changes to items, check orders and do all things backend.</p>
</section>

<section class="row">
    <div class="col-md-4 order-md-2">

        <h4>Menu</h4>
        {{#each categories as |category|}}
        <div class="accordion" id="accordionExample">
          
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{@index}}" aria-expanded="true" aria-controls="collapse{{@index}}">
                        {{category.name}}
                    </button>
                </h2>
                
                <div id="collapse{{@index}}" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        {{#each categories.item as |item|}}
                        <strong>{{item.name}}</strong> {{item.status}} <code>{{admin.username}}</code> {{admin.category}}.
                        {{/each}}
                    </div>
                </div>
            
            </div>
   
        </div>
        {{/each}}
    </div>
    <div class="col-md-4 order-md-1">
        <h4>Orders</h4>
    </div>
</section>