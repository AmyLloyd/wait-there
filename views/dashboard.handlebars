<section class="row">
    <h2>Dashboard </h2>
    <p class="lead">Here's your space to make changes to items, check orders and do all things backend.</p>
</section>

<section class="row">
    <div class="col-md-4 order-md-2">
       
        <h4>Order Menu</h4>
        <div class="accordion accordion-flush" id="accordionFlushExample">
            {{#each categories}}
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="flase" aria-controls="flush-collapseOne">
                 {{this.name}}
                    </button>
                </h2>
              
                <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                    {{#each this.items}}
                    <div class="accordion-body">
                        <div>{{this.name}}</div>
                        <div>{{this.price}}</div>
                        <div>{{this.status}}</div>
                    </div>
                    {{/each}}
                </div>
         
            </div>
        {{/each}}
        </div>

    </div>
    <div class="col-md-4 order-md-1">
        <h4>Orders</h4>

    </div>
</section>