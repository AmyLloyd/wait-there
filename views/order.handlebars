
<section class="row">
    <div class="col-md-4 order-md-2">
       
        <h4>Order Menu</h4>
        <div class="accordion accordion-flush" id="accordionFlushExample">
            {{#each categories}}
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="flase" aria-controls="flush-collapseOne">
                 {{this.name}}
                    </button>
                </h2>
              
                <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                    {{#each this.items}}
                    <div class="accordion-body row">
                        <div class="col-6">{{this.name}}</div>
                        <div class="col-2">${{this.price}}</div>
                        <div class="col-2">{{this.status}}</div>
                        <div class="col-2">
                            <button type="button" class="btn btn-dark btn-sm">Add</button>
                        </div>
                    </div>                    
                    {{/each}}
                </div>
         
            </div>
        {{/each}}
        </div>

    </div>
    <div class="col-md-4 order-md-1">
        <h4>Orders</h4>

    </div>
</section>