
<section class="row">
    <h1 class="text-bg-danger p-3">{{admin.username}}Waikerie Netball Club</h1>
</section>
<section class="row">
    <div class="col-md-4">
        <h4>My order</h4>
        <div class="row" id="reviewOrderEl"></div>
        <div class="row mb-3" id="orderEl-id">
            
        </div>
        <div class="mb-3 row">
            <label for="refName" class="col-sm-2 col-form-label">Reference name</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="refName">
            </div>
        </div>
                <button type="submit" class="btn btn-dark col-3" id="review">Review order</button>
            </div>
    <div class="col-md-6 order-md-2">
        <h4>Menu</h4>
        <div class="accordion accordion-flush" id="accordionFlushExample">
            {{#each categories}}
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-{{@index}}">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-{{@index}}" aria-expanded="false" aria-controls="#flush-collapse-{{@index}}">
                 {{this.name}}
                    </button>
                </h2>
                <div id="flush-collapse-{{@index}}" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                    {{#each this.items}}
                    <div class="accordion-body row">
                        <div class="col-4">{{this.name}}</div>
                        <div class="col-1">${{this.price}}</div>
                        <div class="col-3">
                            <button type="button" class="btn btn-dark btn-sm" data-id="{{this.id}}" data-name="{{this.name}}" data-price="{{this.price}}" data-status="{{this.status}}" onClick="addItem(this)">Add</button>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        {{/each}}
        </div>
    </div>
</section>

  <script src="/js/customerOrder.js"></script>