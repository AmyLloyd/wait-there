
<section class="row">
    <h1 class="text-bg-danger p-3">{{admin.username}}Waikerie Netball Club</h1>
</section>
<section class="row">
    <div class="col-md-4">
        <h4>My order</h4>
        <ul>
            <li>Drink 1</li>
            <li>Hot food 1</li>
        </ul>
    </div>
    <div class="col-md-6 order-md-2">
        <h4>Menu</h4>
        <div class="accordion accordion-flush" id="accordionFlushExample">
            {{#each categories}}
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-{{@index}}" aria-expanded="flase" aria-controls="flush-flush-collapse-{{@index}}">
                 {{this.name}}
                    </button>
                </h2>
              
                <div id="flush-collapse-{{@index}}" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                    {{#each this.items}}
                    <div class="accordion-body row">
                        <div class="col-4">{{this.name}}</div>
                        <div class="col-2">${{this.price}}</div>
                        <div class="col-3">{{this.status}}</div>
                        <div class="col-2">
                            <button type="button" class="btn btn-dark btn-sm">Add</button>
                        </div>
                    </div>                    
                    {{/each}}
                </div>
         
            </div>
        {{/each}}
        </div>

    </div>

</section>